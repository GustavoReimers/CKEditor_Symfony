{% form_theme form _self %}

{% block ckeditor_widget %}
{% spaceless %}
    <textarea {{ block('widget_attributes') }}>{{ value }}</textarea>

    {% if enable %}
        <script type="text/javascript">
            var CKEDITOR_BASEPATH = '{{ base_path | trim_asset_version }}';
        </script>

        <script type="text/javascript" src="{{ js_path }}"></script>

        <script type="text/javascript">
            if (CKEDITOR.instances['{{ id }}']) {
                delete CKEDITOR.instances['{{ id }}'];
            }

            {% for pluginName, plugin in plugins %}
                CKEDITOR.plugins.addExternal('{{ pluginName }}', '{{ plugin.path | trim_asset_version }}', '{{ plugin.filename }}');
            {% endfor %}

            CKEDITOR.replace('{{ id }}'{% if config is not empty %}, {{ config | json_encode | raw }}{% endif %});
        </script>
    {% endif %}
{% endspaceless %}
{% endblock %}
